@page
@using WebApplication2.Entity;
@using WebApplication2.Service;
@model WebApplication2.Pages.Invoice.UpdateInvoiceModel
@{

}
<form method="post">
  <label for="fname">Invoice Code :</label><br>
  <input type="text" name="invoiceCode" value="@Model.invoice.invoiceCode"><br>
  <label for="lname">Date :</label><br>
	<input type="text" name="insertDate" value="@Model.invoice.insertDate"><br><br>
   <div>
		@{
			int count = 0;
		}
		<table>
			<tr>
				<th>Row Number</th>
				<th>Product Id</th>
				<th>Name Of Product</th>
				<th>Type</th>
				<th>Quantity</th>
				<th>Price</th>
				<th>Total</th>
			</tr>

			@if (@Model.stores != null && @Model.stores.Count > 0)
			{
				@foreach (var item in @Model.stores)
				{
										<tr>
											<td>@count</td>
											<td>@item.productId</td>
											<td>@item.productName</td>
											<td>@item.typeCd</td>
											<td>@item.quantity</td>
											<td>@item.price</td>
											<td>@item.total</td>
											<td>
							<a href="/Invoice/UpdateStoreDetail?row=@count&invoiceCode=@Model.invoice.invoiceCode">Edit</a>
							<a href="/Invoice/DeleteStoreDetail?row=@count&invoiceCode=@Model.invoice.invoiceCode">Delete</a>
						</td>
										</tr>

					count++;
				}
			}

		</table>
  </div>
  <input type="submit" value="Update">
</form>

<p>
	@Model.result
</p>

