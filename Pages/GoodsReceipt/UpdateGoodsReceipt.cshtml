@page
@using WebApplication2.Entity;
@using WebApplication2.Service;
@model WebApplication2.Pages.GoodsReceipt.UpdateGoodsReceiptModel
@{

}
<form method="post">
  <label for="fname">Goods Receipt Code :</label><br>
  <input type="text" name="goodsReceiptCode" value="@Model.goodsReceipt.goodsReceiptCode"><br>
  <label for="lname">Date :</label><br>
	<input type="text" name="insertDate" value="@Model.goodsReceipt.insertDate"><br><br>
   <div>
		@{
			int count = 0;
		}
		<table>
			<tr>
				<th>Row Number</th>
				<th>Product Id</th>
				<th>Name Of Product</th>
				<th>Type</th>
				<th>Quantity</th>
				<th>Price</th>
				<th>Total</th>
			</tr>

			@if (@Model.stores != null && @Model.stores.Count > 0)
			{
				@foreach (var item in @Model.stores)
				{
								<tr>
									<td>@count</td>
									<td>@item.productId</td>
									<td>@item.productName</td>
									<td>@item.typeCd</td>
									<td>@item.quantity</td>
									<td>@item.price</td>
									<td>@item.total</td>
									<td>
							<a href="/GoodsReceipt/UpdateStoreDetail?row=@count&goodsReceiptCode=@Model.goodsReceipt.goodsReceiptCode">Edit</a>
							<a href="/GoodsReceipt/DeleteStoreDetail?row=@count&goodsReceiptCode=@Model.goodsReceipt.goodsReceiptCode">Delete</a>
						</td>
								</tr>

					count++;
				}
			}

		</table>
  </div>
  <input type="submit" value="Update">
</form>

